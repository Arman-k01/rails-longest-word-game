<div class="container my-5">
  <h1 class="text-center">Longest Word Game</h1>
  <p class="text-center">Create the longest word possible using the letters below:</p>
  <div class="text-center">
    <%= @letters.join(' ') %>
  </div>
  <div class="mt-3">
    <form action="/score" method="post" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-group">
        <label for="word">Your Word</label>
        <input type="text" class="form-control" id="word" name="word" required>
      </div>
      <input type="hidden" name="letters" value="<%= @letters.join %>">
      <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>
